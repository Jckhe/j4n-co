%header.top_bar.dark_grey
  %nav.sitenav
    
    .section.work.yellow{:alt=>"portfolio"} 
      - pages = sitemap.resources.find_all{|p| p.url.match(/^\/portfolio\/.*\/$/)  }
      - pages.each do |page|
        %a{:href=>page.url.chomp('/')}>
          %img{:src=>page.data.icon}>
    
    .section.tools.aqua 
      - pages = sitemap.resources.find_all{|p| p.url.match(/^\/portfolio\/.*\/$/)  }
      /- pages = sitemap.resources.find_all{|p| p.url.match(/^\/sketches\/.*\/$/)  }
      - pages.each do |page|
        %a{:href=>page.url.chomp('/')}>
          %img{:src=>page.data.icon}>

    .section.blog.redish{:alt=>"blog"} 

      /%a.prev.white_pixel_font
      /  &#9650;
        
      - blog.articles[0...1].each do |article|
        %a.small_heading.white_pixel_font{:href=>article.url}
          = article.title
        
      /%a.next.white_pixel_font
