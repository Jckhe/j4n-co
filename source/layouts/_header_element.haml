%head
  %meta{:charset=>"utf-8"}
  %meta{:content=>"IE=edge,chrome=1", :'http-equiv'=>"X-UA-Compatible"}
  %title
    - if current_page.data.title
      = current_page.data.title.to_s + " | " + data.site.meta.title.to_s
    - else 
      = data.site.meta.title.to_s
  
  %meta{:name=>"author",        :content=>"Jan Drewniak"}
  %meta{:name=>"robots",        :content=>"INDEX, FOLLOW"}    
  %meta{:name => "keywords",    :content => current_page.data.keywords || data.site.metakeywords}
  %meta{:name => "description", :content => current_page.data.meta_description  || data.site.meta.description}
  %meta{:name => "viewport",    :content => "width = device-width, initial-scale = 1, user-scalable = yes"} 

  %meta{:name=>"msvalidate.01", :content=>"B936EB2BEE226ABAD7EC6968E75B5014"}

  %link{:rel=>"icon", :type=>"image/png", :href=>"/images/favicon.png"}
 
  %link{:href=>'http://fonts.googleapis.com/css?family=Titillium+Web:300,300italic,700', :rel=>'stylesheet', :type=>'text/css'}
  /%link{:href=>'http://fonts.googleapis.com/css?family=Asap:400,700,400italic', :rel=>'stylesheet', :type=>'text/css'}

  = stylesheet_link_tag 'site'
  = javascript_include_tag "jquery.min"
  = javascript_include_tag "script"
  = yield_content :head
