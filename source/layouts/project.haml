%html{:lang => 'en'}
  
  = partial "layouts/header_element"

  %body{:class=> page_classes}

    = partial "layouts/site_nav"

    %section.main.projects.has_shadow  
      %h1.text_shadow{:style=>'background-image: url('+current_page.data.header_bg+')'}
        =current_page.data.title

      %article
        = yield   
   
      - if current_page.data.gallery_images
        #project_gallery        
        - current_page.data.gallery_images.each do |img|
          %figure 
            %img{:src=>img.url, :id=>'slide_', :class=>'gallery_large'} 

          %figcaption
            =img.caption


  = javascript_include_tag "jquery.min.js"  
  = javascript_include_tag "my_face.js"  
 
  = yield_content(:javascript)